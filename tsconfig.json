{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "declaration": true,
    "strict": true,
    "strictNullChecks": false
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "test/*",
    "node_modules"
  ]
}